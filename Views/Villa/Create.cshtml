@model DummyWebApp.Domain.Entities.Villa
@{
    ViewData["Title"] = "Create";
}
<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create New Villa</h2>
            <hr  />
        </div>
        <div asp-validation-summary="All"></div>
        <div class=" mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-asp-validation-for="Name" class="text-danger" />

        </div>
        <div class=" mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class=" mb-3">
            <label asp-for="Occupancy"></label>
            <input asp-for="Occupancy" class="form-control" />
            <span asp-asp-validation-for="DisplayOrder" class="text-danger"  />
        </div>
        <div class=" mb-3">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" hidden class="form-control" />
            <input asp-for="Image" class="form-control" />

        </div>
        <div class=" mb-3">
            <label asp-for="Sqft"></label>
            <input asp-for="Sqft" class="form-control" />
            <span asp-asp-validation-for="Sqft" class="text-danger" />
        </div>
        <div class=" mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-asp-validation-for="Price" class="text-danger" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-asp-controller="Villa" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
