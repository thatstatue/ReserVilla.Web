@model DummyWebApp.Domain.Entities.Villa
@{
    ViewData["Title"] = "Delete";
}


<div class="w-100 card border-0 p-4">
    <div class="card-body border p-4">
        <form method="post" asp-action="Delete">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-8 border p-3 mt-4">
                    <div class="row pb-2">
                        <h2 class="text-primary"> Edit Villa</h2>
                        <hr />
                    </div>
                    <div class=" mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" disabled class="form-control" />

                    </div>
                    <div class=" mb-3">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                    <div class=" mb-3">
                        <label asp-for="Occupancy"></label>
                        <input asp-for="Occupancy" disabled class="form-control" />
                    </div>
                    <div class=" mb-3">
                        <label asp-for="Sqft"></label>
                        <input asp-for="Sqft" disabled class="form-control" />
                    </div>
                    <div class=" mb-3">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                    <div class=" mb-3">
                        <label asp-for="ImageUrl"></label>
                        <input asp-for="ImageUrl" disabled class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
                    <a asp-asp-controller="Villa" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-start">
                    <img src="@Model.ImageUrl" width="100%" style="border-radius:5px" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}