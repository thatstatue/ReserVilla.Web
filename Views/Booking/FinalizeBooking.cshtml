@using DummyWebApp.Application.Utility
@model Booking

<div class="container pt-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #aaa;">

        <div class="col-12 col-lg-7 p-4 2 mt-4 mt-md-0">
            <div class="row p-1 my-1 " style="border-radius:20px;">
                <div class="col-6">
                    <h3 style="font-size : 30px">Villa Details</h3>
                </div>
                <div class="text-end col-6 ">
                    <a asp-controller="Home" asp-action="Index" class="btn" style="width:200px;">
                        <i class="bi bi-arrow-left-square"  ></i> &nbsp; Modify Selection
                    </a>
                </div>
                <br /><br /><br />
                <hr />
                <partial name="_VillaDetails" model="Model.Villa" />
                
                <br /><br />
                <hr />
                <div class="text-end">
                    <h4 class="font-weight-bold" style="color:var(--bs-accent)">
                        Booking Total :
                        <span style="border-bottom:1px ">
                             @Model.TotalCost.ToString("c")
                        </span>
                    </h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 p-4 2 mt-4 mt-md-0" style="border-left:1px solid #aaa">
            <form method="post">
                <input asp-for="VillaId" hidden />
                <input asp-for="UserId" hidden />
                <input asp-for="Id" hidden />
                <input asp-for="Villa_Number" hidden />
                <div class="row pt-1 mb-3 " style="border-radius:20px; ">
                    <div class="col-12">
                        <h3>Enter Booking Details</h3>
                    </div>
                </div>

                <div class="form-group pt-0">
                    <label asp-for ="Name">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Phone">Phone</label>
                    <input asp-for ="Phone" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Email" >Email</label>
                    <input asp-for ="Email" class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Villa_Number">Villa Number</label>
                    <input asp-for="Villa_Number" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="CheckInDate">Check in Date</label>
                    <input asp-for="CheckInDate" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="CheckOutDate" >Check Out Date</label>
                    <input asp-for="CheckOutDate" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Nights">No. of nights</label>
                    <input asp-for="Nights" disabled class="form-control" />
                </div>
                <div class="form-group pt-2 pt-md-4">
                    @if (Model.Villa.IsAvailable)
                    {
                        <button type="submit" class="btn btn-success form-control">Book Now</button>
                    }
                    else
                    {
                        <input class="btn disabled form-control" value="Sold Out" /> 
                    }
                </div>
            </form>
        </div>
    </div>
</div>