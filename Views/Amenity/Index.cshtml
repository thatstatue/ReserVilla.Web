@model IEnumerable<DummyWebApp.Domain.Entities.Amenity>
@{
    ViewData["Title"] = "Index";
}
<h1>Index Amenity</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Amenity List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Amenity" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Add New Amenity
            </a>
        </div>
    </div>
</div>
<br />
<br />

<table class="table table-boardered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Amenity Name
            </th>
            <th>
                Villa Name
            </th>
            <th>
                Description 
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%" style="vertical-align: middle; padding: 10px 0;">
                    &nbsp; @obj.Name
                </td>
                <td width="30%" style="vertical-align: middle; padding: 10px 0;">
                    &nbsp; @obj.Villa.Name
                </td>
                <td width="15%" style="vertical-align: middle; padding: 10px 0;">
                    &nbsp; @obj.Description
                </td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Amenity" asp-action="Edit" asp-route-id="@obj.VillaId" class="btn btn-primary align-items-center">
                            <i class="bi bi-pen-fill"></i> &nbsp;  Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Amenity" asp-action="Delete" asp-route-id="@obj.VillaId" class="btn btn-danger justify-content-center">
                            <i class="bi bi-trash2-fill"></i> &nbsp;  Delete
                        </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>