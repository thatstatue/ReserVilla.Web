@model AmenityVM
@{
    ViewData["Title"] = "Delete";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Amenity</h2>
            <hr />
        </div>
        <input asp-for="Amenity.VillaId" hidden />
        <div class=" mb-3">
            <label asp-for="Amenity.VillaId"></label>
            <select asp-for="@Model.Amenity.VillaId" asp-items="@Model.VillaList as
            IEnumerable<SelectListItem>" disabled class="form-select border shadow">
                <option disabled selected>--Select Villa--</option>
            </select>

            <span asp-asp-validation-for="VillaId" class="text-danger" />

        </div>
        <div class=" mb-3">
            <label asp-for="Amenity.Name"></label>
            <input asp-for="Amenity.Name" disabled class="form-control" />
            <span asp-asp-validation-for="Amenity.Name" class="text-danger" />

        </div>
        <div class=" mb-3">
            <label asp-for="Amenity.Description"></label>
            <input asp-for="Amenity.Description" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-asp-controller="Amenity" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
